<div class="container">
  <div class="row">
    <div class="span9">
      <%- model_class = Link -%>
      <div class="index-header">
        <%= link_to "Submit New Film", new_link_path, :id => "new-button",  :class => 'btn btn-primary' %>
        <h2 class="docs"> Documentary Collection </h2>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:title) %></th>
            <th><%= model_class.human_attribute_name(:description) %></th>
            <th><%= model_class.human_attribute_name(:tags) %></th>
          </tr>
        </thead>
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <div class="color-text">
                <td><h5><%= link_to link.title, link_path(link) %></h5></td>
                <td><%= link_to link.description, link_path(link) %></td>
              </div>
              <td><%= link.tags %></td>
              <td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
        <%= paginate @links %>
    </div>
    <div class="span3", id="side-pic">
        <%= image_tag('hacker.jpg', :size => "500x500")%>
        <%= image_tag('internet.png', :size => "500x500")%>
        <%= image_tag('hacker.jpg', :size => "500x500")%>
        <%= image_tag('internet.png', :size => "500x500")%>
        <%= image_tag('hacker.jpg', :size => "500x500")%>
        <%= image_tag('internet.png', :size => "500x500")%>
    </div>
  </div>
</div>

