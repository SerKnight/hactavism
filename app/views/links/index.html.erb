<div class="container">
  <div class="row">
    <div class="span9">
      <%- model_class = Link -%>
      <div class="page-header">
        <%= link_to "Submit New Film", new_link_path, :id => "new-button",  :class => 'btn btn-primary' %>
        <h1> Documentary Collection </h1>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:description) %></th>
            <th><%= model_class.human_attribute_name(:tags) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td><%= link_to link.id, link_path(link) %></td>
              <td><%= link_to link.description, link_path(link) %></td>
              <td><%= link.tags %></td>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_link_path(link), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            link_path(link),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      

    </div>
    <div class="span3", id="side-pic">
        <%= image_tag('hacker.jpg', :size => "500x500")%>
    </div>
  </div>
</div>

