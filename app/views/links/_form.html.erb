<%= form_for @link, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'text_field', :placeholder => "Ex.http://www.youtube.com/watch?v=S4JSeQESzKE" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :class => 'text_field', :placeholder => "Ex. students, activism, politics" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Take Action", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
